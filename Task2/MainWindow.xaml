<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120">Enter file path:</TextBlock>
        <TextBox x:Name="TextBox" Width="300" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150"></TextBox>
        <Button Content="ImportExcelToDB" Height="40" Width="100" BorderBrush="Black" Click="ButtonImport_OnClick"></Button>
        
        <Button Content="FilesList" Height="40" Width="100" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,130" Click="ButtonViewFiles_OnClick"></Button>
    </Grid>
</Window>
